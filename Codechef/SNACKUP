#include <iostream>
using namespace std;

int main() {
    int t;
    cin>>t;
    while(t--)
    {
        int n;
        cin>>n;
        cout<<n<<endl;
        int judge=1;
        int round=n;
        while(round--)
        {
            cout<<n<<endl;
            for(int i=0; i<n; i++)
            {
                if(judge == n)
                cout<<i+1<<" "<<judge<<" "<<1<<endl;
                else
                cout<<i+1<<" "<<judge<<" "<<judge+1<<endl;
            }
            judge++;
        }
    }
	return 0;
}
